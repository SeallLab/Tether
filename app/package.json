{
  "name": "Tether",
  "productName": "Tether",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "dist-electron/electron/main.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:react dev:electron",
    "dev:react": "vite",
    "dev:electron": "npm run transpile:electron && cross-env NODE_ENV=development electron .",
    "build": "npm run prepare-build && tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "transpile:electron": "tsc --project src/electron/tsconfig.json",
    "prepare-build": "node scripts/prepare-build.js",
    "dist:mac": "npm run build && npm run transpile:electron && electron-builder --mac --arm64",
    "dist:win": "npm run build && npm run transpile:electron && electron-builder --win --x64",
    "dist:linux": "npm run build && npm run transpile:electron && electron-builder --linux --x64",
    "dist:all": "npm run build && npm run transpile:electron && electron-builder --mac --win --linux"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/vite": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "dotenv": "^16.5.0",
    "heroicons": "^2.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "reflect-metadata": "^0.2.2",
    "tailwindcss": "^4.1.8",
    "tsyringe": "^4.10.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "cross-env": "^7.0.3",
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  }
}
